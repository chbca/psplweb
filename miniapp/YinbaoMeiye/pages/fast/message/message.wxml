<view class="page">
    <view class="weui-msg">
        <view class="weui-msg__icon-area">
            <icon type="success" size="93"></icon>
        </view>
        <view class="weui-msg__text-area">
            <view class="weui-msg__title">订单已完成</view>
            <view class="weui-msg__desc">感谢您对未来PORT的点单支持，欢迎再次光临<navigator url="" class="weui-msg__link">文字链接</navigator></view>
        </view>
        <view class="weui-msg__opr-area">
            <view class="weui-btn-area">
                <button class="weui-btn" type="primary" bindtap="buyAgain">再次预订</button>
                <button class="weui-btn" bindtap="tapJump" type="default">告诉好友</button>
            </view>
        </view>
        <view class="weui-msg__extra-area">
          <view>订单内容：{{ticketSummary}}</view>           
        </view>
    </view>
</view>