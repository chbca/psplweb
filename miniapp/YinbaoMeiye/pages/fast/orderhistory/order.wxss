    text-align: left;
    color: #5a5a5a;
}

.ppg_seve {
    position: relative;
    width: 400rpx;
    display: inline-block;
}

.ppg_seve_card {
    position: absolute;
    left: 4rpx;
    bottom: 0rpx;
    font-size: 26rpx;
    line-height: 1.62;
    color: #576b95;
}

.ppg_seve_pohot{
    position: absolute;
    right:  4rpx;
    bottom: 0rpx;
    font-size: 26rpx;
    line-height: 1.62;
    color: #576b95;
}

.ppg_seperator {
  margin: 30rpx 0;
  height: 20rpx;
  border-bottom: 1rpx dashed #e5e5e5;
  position: relative;
}


.ppg_seperator:before, .ppg_seperator:after {
  content: " ";
  width: 20rpx;
  height: 40rpx;
  background: #f5f5f5;
  box-shadow: inset 0 5rpx 10rpx 0 rgba(25, 151, 127, 0.08);
  position: absolute;
  top: 0rpx;
}

.ppg_seperator:before {
  border-radius: 0 20rpx 20rpx 0;
  left: -4rpx;
  border-top: 1rpx solid #f8f8f8;
  border-right: 1rpx solid #f8f8f8;
}

.ppg_seperator:after {
  border-radius: 20rpx 0 0 20rpx;
  left: auto;
  right: -4rpx;
  border-left: 1rpx solid #f8f8f8;
  border-bottom: 1rpx solid #f8f8f8;
}

.ppg_info {
  text-align: left;
