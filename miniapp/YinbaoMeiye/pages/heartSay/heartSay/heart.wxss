.page {
  height: 100%;
}
.ppg_heartImg {
  font-size: 0;
  line-height: 1;
}
.ppg_heartImg image{
  width: 100%;
  height: 640rpx;
}
.ppg_hint_1 {
  font-size: 32rpx;
  width: 350rpx;
  height: 80rpx;
  border: 1px solid #FF5556;
  border-radius: 50rpx;
  margin: 0rpx auto;  
  margin-top: 50rpx;
  text-align: center;
  line-height: 80rpx;
  color: #FF5556;
}
.ppg_hint_1 image{
    width: 34rpx;
  height: 34rpx;
  position: relative;
  top: 6rpx;
}
.ppg_gift_cont {
  padding: 20rpx;
}
.ppg_gift_title {
  margin: 10rpx 0;
  clear: both;
}
.ppg_gift_title text {
  margin-left: 30rpx;
  font-size: 32rpx;
  color: #99A0A3;
}
.ppg_gift_title image {
  width: 26rpx;
  height: 24rpx;
  margin-right: 30rpx;
  float: right;
  position: relative;
  top:25rpx;
}
.ppg_gift_items {
  width: 100%;
  margin-bottom: 10rpx;
}
.ppg_gift_it {
    width: 50%;
    float: left;
    padding: 30rpx;
    padding-bottom: 0rpx;    
    box-sizing: border-box;
}
.ppg_gift_item {
  width: 100%;
  height: 250rpx;
  text-align: left;

}
.ppg_gift_item image {
  width: inherit;
  height: 180rpx;
  display: block;
  border-radius: 8rpx;
}
.ppg_gift_item text {
  color: #3A3C4C;
  font-size: 30rpx;
  line-height: 1;
}

.ppg_gift_clear {
    clear: both;
}
.ppg_gift_but {
  clear: both;
  padding: 28rpx;
  padding-top: 30rpx;
  text-align: center;
}
.ppg_gift_but button {
background: #09BB07;
box-shadow: 0 1px 1px 0 rgba(0,0,0,0.10);
border-radius: 8rpx;
line-height: 86rpx;
}
.ppg_gift_but image {
  width: 30rpx;
  height: 30rpx;
  position: relative;
  top: 4rpx;
}
.ppg_gift_but view {
  margin-top: 38rpx;
  color: #576B95;
  font-size: 30rpx;
}