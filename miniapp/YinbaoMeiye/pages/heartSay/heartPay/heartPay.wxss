.ppg_heartImg {
  padding: 40rpx 50rpx;
  line-height: 1;
  font-size: 0rpx;
  box-sizing: border-box;
}

.ppg_heartImg image {
  width: 100%;
  height: 336rpx;
  border-radius: 12rpx;
}

.ppg_selectCartImg .ppg_title {
  padding-left: 22rpx;
  padding-bottom: 10rpx;
  margin-top: -2rpx;
  color: #5b6779;
  font-size: 32rpx;
}

.ppg_selectCartImg .ppg_title image {
  width: 38rpx;
  height: 28rpx;
  position: relative;
  top: 4rpx;
}
.ppg_selectGift .ppg_title image {
    width: 36rpx !important;
} 

.ppg_cartImg_cont {
  width: 100%;
  padding: 10rpx;
  height: 320rpx;
  box-sizing: border-box;
}

.ppg_cartImg_items {
  width: 33.33333%;
  height: auto;
  padding: 10rpx;
  box-sizing: border-box;
  float: left;
  font-size: 0;
  line-height: 1;
}

.ppg_cartImg_items image {
  width: 100%;
  height: 120rpx;
  border-radius: 8rpx;
  box-sizing: border-box;
}
.ppg_cartImg_items image:hover {
  border: 2rpx solid #FF5556;
}
.ppg_selectGift {
  padding: 20rpx;
}

.ppg_selectGift  .ppg_title {
  margin-top: -32rpx;
  padding-top: 0rpx;
  color: #5b6779;
  font-size: 32rpx;
}

.ppg_selectGift .ppg_title image {
  width: 40rpx;
  height: 30rpx;
  position: relative;
  top: 4rpx;
  
}
.ppg_selectGift .ppg_gift_items{
  margin-top: 20rpx;
  margin-bottom: 90rpx;
}

.ppg_selectGift .ppg_gift_item {
  padding: 20rpx 30rpx;
  border: 1px solid #d9e1e5;
  margin-bottom: 20rpx;
  border-radius: 4rpx;
  position: relative;
}


.ppg_selectGift .ppg_gift_item .ppg_title {
  color: #3a3c4c;
  font-size: 36rpx;
  margin-top: 0rpx;
}

.ppg_selectGift .ppg_gift_item .ppg_price {
  color: #5b6779;
  font-size: 32rpx;
}
.ppg_selectGift .ppg_gift_addGift {
  position: absolute;
  right: -12rpx;
  top:50%;
  transform: translateY(-50%);
  width: 232rpx;
  font-size: 0;
  line-height: 1;
  display: none;
}
.ppg_selectGift .ppg_gift_addGift .ppg_minus ,.ppg_selectGift .ppg_gift_addGift .ppg_push{
  width: 70rpx;
  height: 70rpx;
  border-radius: 24rpx;
}

.ppg_selectGift .ppg_gift_addGift .ppg_count {
  font-size: 36rpx;
  line-height: 1;
  color: #5b6779;
  display: inline-block;
  margin:0rpx 20rpx;
  position: relative;
  bottom: 28rpx;
}
.ppg_selectGift  .ppg_gift_show{
  position: absolute;
  right: 34rpx;
  top:50%;
  transform: translateY(-50%);
  margin-top:7rpx;


}

.ppg_selectGift .ppg_gift_show .ppg_push {
  width: 48rpx;
  height: 48rpx;
}

.ppg_selectGift .ppg_gift_item:hover {
    border-color:  #FF5556;
}
.ppg_selectGift .ppg_gift_item:hover  .ppg_gift_addGift  {
  display: block !important;
}
.ppg_selectGift .ppg_gift_item:hover .ppg_gift_show  {
  display: none !important;
}

.ppg_gift_foot {
  height: 100rpx;
  line-height: 100rpx;
  width: 100%;
  position: fixed;
  bottom: 0;
  border-top: 1px solid #E8E8E8;
  background-color: #ffffff;
  box-sizing: border-box;
  padding-left: 20rpx;
}
.ppg_gift_foot view{
  font-size: 32rpx;
  color: #666666;
  display: inline-block;
}
.ppg_gift_foot .ppg_red{
  color: #FF5556;
}
 .ppg_gift_foot .ppg_gift_payBut {
  float: right;
   width: 300rpx;
   background-color: #09BB07;
   text-align: center;
   color: #ffffff;
   font-size: 36rpx;
   margin-top:-2rpx;

 }