page {
  height: 100%;
}

.page {
  height: 100%;
  background-color: #f6f6f6;
}

.clearBoth::after {
  content: '';
  display: table;
  clear: both;
}

.ppg_head {
  padding-top: 30rpx;
  padding-bottom: 30rpx;
  text-align: center;
  font-size: 0;
  line-height: 1;
}

.ppg_head  .ppg_headImg {
  width: 150rpx;
  height: 150rpx;
  border-radius: 105rpx;
  border: 4rpx solid #fff;
  margin: 0 auto;
  margin-bottom: 20rpx;
}

.ppg_head  .ppg_shopName {
  color: #2c2d3b;
  font-size: 26rpx;
  text-align: center;
}

.ppg_search {
  box-shadow: 0 2rpx 4rpx 0 rgba(87, 107, 149, 0.15);
  background-color: #fff;
}

.ppg_search .ppg_icon1 {
  width: 23rpx;
  height: 28rpx;
  margin-left: 20rpx;
  margin-top: 20rpx;
  margin-right: 15rpx;
  float: left;
  vertical-align: middle;
}

.ppg_search .ppg_address {
  color: #576b95;
  font-size: 26rpx;
  line-height: 70rpx;
  float: left;
}

.ppg_search .ppg_searchIcon {
  float: right;
  padding: 0 22rpx;
  height: 70rpx;
  background-image: linear-gradient(to top right, #ffd68c 0%, #ff7fc4 100%);
}

.ppg_search .ppg_searchIcon image {
  width: 38rpx;
  height: 38rpx;
  vertical-align: middle;
  margin-top: 6rpx;
}

.ppg_content {
  padding-top: 20rpx;
}

.ppg_content .ppg_item {
  margin-bottom: 20rpx;
  background-color: #fff;
  padding: 30rpx 0;
  display: flex;
  align-items: center;
}

.ppg_content .ppg_item image {
  width: 28rpx;
  height: 28rpx;
  margin: 14rpx 16rpx 0 20rpx;
  align-self: flex-start;
}

.ppg_content .ppg_item .ppg_name {
  font-size: 32rpx;
  color: #3a3c4c;
  flex: 1;
}

.ppg_content .ppg_item .ppg_shopAddress {
  font-size: 22rpx;
  color: #818a8d;
}

.ppg_content .ppg_item .ppg_distance {
  font-size: 26rpx;
  color: #576b95;
  margin-right: 40rpx;
  text-align: right;
}
