
.clearBoth::after {
  content: '';
  display: table;
  clear: both;
}

.ppg_head {
  background-color: #f6f6f6;
}

.ppg_head .ppg_title {
  font-size: 26rpx;
  color: #576b95;
  text-align: right;
  position: relative;
  line-height: 70rpx;
  margin-right: 22rpx;
}

.ppg_head .ppg_title::after {
  content: '';
  display: inline-block;
  width: 10rpx;
  height: 10rpx;
  border-bottom: 1px solid #576b95;
  border-right: 1px solid #576b95;
  transform: rotate(-45deg);
  vertical-align: 2rpx;
  transition: all 0.3s;
}

.ppg_head .ppg_title_open::after {
  transform: rotate(45deg) !important;
  vertical-align: 4rpx;
}

.ppg_head .ppg_staffItems {
  white-space: nowrap;
  min-height: 286rpx;  
}

.ppg_leftNull {
  display: inline-block;
  width: 13%;
}

.ppg_head .ppg_staffItems .ppg_item {
  display: inline-block;
  width: 74%;
  background: #fff;
  box-shadow: 0 3px 20px 0 rgba(87, 107, 149, 0.10);
  border-radius: 20rpx;
  padding: 0 20rpx;
  margin-bottom: 50rpx;
  box-sizing: border-box;
}

.ppg_head .ppg_staffItems .unselected {
  transform: scale(0.8);
}

.ppg_head .ppg_staffItems .ppg_item .ppg_item_hd {
  white-space: normal;
  display: flex;
  padding: 30rpx 0;
  border-bottom: 1rpx solid #DBDFE4;
}

.ppg_head .ppg_staffItems .ppg_item .ppg_item_hd .ppg_staffPhoto {
  width: 156rpx;
  height: 156rpx;
  border-radius: 78rpx;
  flex: 0 0 156rpx;  
}

.ppg_head .ppg_staffItems .ppg_item .ppg_item_hd .ppg_text {
  font-size: 32rpx;
  color: #3a3c4c;
  padding-left: 18rpx;  
}

.ppg_head .ppg_staffItems .ppg_item .ppg_item_hd .ppg_info {
  font-size: 22rpx;
  color: #818a8d;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 3;
  overflow: hidden;
  height: 103rpx;
}

.ppg_head .ppg_staffItems .ppg_item .ppg_item_ft {
  height: 37rpx;  
  display: flex;
  justify-content: space-between;
  align-items: center;
  line-height: 76rpx;
  font-size: 26rpx;
  white-space: normal;
  padding: 20rpx 0;
}

.ppg_head .ppg_staffItems .ppg_item .ppg_item_ft .ppg_level image {
  width: 27rpx;
  height: 27rpx;
  vertical-align: -2rpx;
}

.ppg_head .ppg_staffItems .ppg_item .ppg_item_ft {
  color: #576b95;
}

.ppg_head .ppg_staffList {
  padding: 10rpx;
  padding-top: 0rpx;
  padding-bottom: 40rpx;
}

.ppg_head .ppg_staffList .ppg_staffItem {
  display: inline-block;
  width: 25%;
  position: relative;
  box-sizing: border-box;
  padding: 10rpx;
}

.ppg_head .ppg_staffList .ppg_staffItem .ppg_headImg {
  background: #fff;
  box-shadow: 0 1.5px 20rpx 0 rgba(87, 107, 149, 0.10);
  border-radius: 8rpx;
  text-align: center;
  font-size: 20rpx;
  color: #3a3c4c;
  padding: 22rpx 28rpx;
  box-sizing: border-box;
  border: 1px solid transparent;
}

.ppg_head .ppg_staffList .ppg_staffItemIn {
  background: linear-gradient(223deg, #ff7fc4 0%, #ffd68c 100%) !important;
  border: 1px solid transparent;
  box-shadow: inset 0 0 0px #0cc,
                /* Inset shadow */ 0 0 0px #0cc,
                /* Outset shadow */ inset -999px 0 0 #fff !important;
}

.ppg_head .ppg_staffList .ppg_staffItem .ppg_headImg image {
  width: 100rpx;
  height: 100rpx;
  border-radius: 100rpx;
}

.ppg_body .ppg_timeTap {
  display: flex;
  justify-content: space-around;
  align-items: center;
  text-align: center;
  font-size: 26rpx;
  color: #818a8d;
  margin-bottom: 20rpx;
}

.ppg_body .ppg_tap {
  height: 100rpx;
  position: relative;
  padding-top: 12rpx;
  box-sizing: border-box;
}

.ppg_body .ppg_timeTap .ppg_timeTap_item {
  box-sizing: border-box;
  width: 100%;
  height: 120rpx;
  padding-bottom: 20rpx;
}

.ppg_body .ppg_timeTap .ppg_timeTap__on {
  background-image: url(http://imgw.pospal.cn//we/mini/order/img/bag2.png);
  background-size: 100% 102%;
  background-repeat: no-repeat;
  background-position: top;
  color: #fff;
  margin-top: -1px;
}

.ppg_body .ppg_timeTap .ppg_timeTap__on .ppg_tap {
  border-bottom: 1px transparent solid !important;
}

.ppg_body .ppg_timeTap .ppg_getDate {
  font-size: 20rpx;
  width: 100%;
  height: 100rpx;
  margin-bottom: 20rpx;
}

.ppg_body .ppg_timeTap .ppg_text {
  margin-top: -1px;
}

.ppg_body .ppg_timeTap .ppg_getDate .ppg_img {
  font-size: 0;
  line-height: 1;
  margin-top: 18rpx;
}

.ppg_body .ppg_timeTap .ppg_getDate .ppg_img image {
  width: 45rpx;
  height: 43rpx;
}

.ppg_body .ppg_timeView {
  padding: 20rpx 10rpx;
  background: #fff;
  height: 400rpx;
  overflow-y: scroll;
}

.ppg_body .ppg_timeView .ppg_timeItem {
  width: 33.3333%;
  float: left;
  box-sizing: border-box;
  padding: 20rpx;
}

.ppg_body .ppg_timeView .ppg_timeItem view {
  font-size: 26rpx;
  color: #818a8d;
  text-align: center;
  border: 1px solid #dbdfe4;
  line-height: 65rpx;
  border-radius: 100rpx;
}

.ppg_body .ppg_timeView2 {
  padding: 20rpx 7rpx;
}

.ppg_body .ppg_timeView2 .ppg_timeItem {
  width: 25%;
  float: left;
  box-sizing: border-box;
  padding: 20rpx;
}

.ppg_body .ppg_timeView2 .ppg_timeItem view {
  font-size: 32rpx;
  color: #818a8d;
  text-align: center;
  border: 1px solid #dbdfe4;
  line-height: 65rpx;
  border-radius: 100rpx;
}

.ppg_body .ppg_timeView .ppg_time__on {
  background-image: linear-gradient(232deg, #ff7fc4 0%, #ffd68c 100%) !important;
  color: #fff !important;
  border: 1px solid #fff !important;
}

.ppg_foot {
  padding: 0 96rpx;
  margin-top: 26rpx;
}

.ppg_foot .ppg_btn {
  text-align: center;
  font-size: 38rpx;
  color: #fff;
  letter-spacing: 0;
  width: 100%;
  line-height: 80rpx;
  background-image: linear-gradient(232deg, #ff7fc4 0%, #ffd68c 100%);
  border-radius: 100rpx;
  margin-bottom: 30rpx;
  box-sizing: border-box;
}

.ppg_foot .ppg_text image {
  width: 26rpx;
  height: 26rpx;
  vertical-align: -2rpx;
}

.ppg_foot .ppg_text {
  font-size: 26rpx;
  color: #576b95;
  text-align: center;
  margin-bottom: 20rpx;
}

.ppg_sectionTitle {
  font-size: 28rpx;
  line-height: 1.29;
  color: #353535;
  margin-top: 40rpx;
  margin-bottom: 19rpx;
  display: flex;
  align-items: center;
  padding-left: 21rpx;
}