  <view class='ppg_swiper'>
    <swiper indicator-dots="{{swiperData.indicatorDots}}" autoplay="{{swiperData.autoplay}}" interval="{{swiperData.interval}}" duration="{{swiperData.duration}}" indicator-color="{{swiperData.indicatorColor}}" indicator-active-color="{{swiperData.indicatorActiveColor}}">
      <block wx:for="{{banners}}" wx:key="Id">
        <swiper-item>
          <image src="{{item.ImagePath}}" mode='aspectFill' class="ppg_swiperImg" />
        </swiper-item>
      </block>
    </swiper>
  </view>